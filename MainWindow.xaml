<Window x:Class="DesktopCompanions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop Companions - Configuration"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        ShowInTaskbar="True">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Desktop Companions Configuration"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Margin="0,0,0,10">
            <!-- General Tab -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="Application Settings" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <CheckBox Content="Run on Windows Startup"
                                          IsChecked="{Binding RunOnStartup}"
                                          Margin="0,5"/>
                                <CheckBox Content="Always Keep Windows on Top"
                                          IsChecked="{Binding AlwaysOnTop}"
                                          Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Quantum Cat Tab -->
            <TabItem Header="Quantum Cat Widget">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="Visibility" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <CheckBox Content="Enable Quantum Cat Widget"
                                          IsChecked="{Binding EnableQuantumCat}"
                                          Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Appearance" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Size Scale:" Margin="0,5"/>
                                <Slider Minimum="0.5" Maximum="2.0" 
                                        Value="{Binding CatSizeScale}" 
                                        TickFrequency="0.1"
                                        IsSnapToTickEnabled="True"
                                        Margin="0,5"/>
                                <TextBlock Text="{Binding CatSizeScale, StringFormat='{}{0:F1}x'}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="CPU Thresholds" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                               Text="Idle Threshold (%):" 
                                               VerticalAlignment="Center"
                                               Margin="0,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="1"
                                             Text="{Binding CatCpuIdleThreshold, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                               Text="Medium Threshold (%):" 
                                               VerticalAlignment="Center"
                                               Margin="0,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1"
                                             Text="{Binding CatCpuMediumThreshold, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" 
                                               Text="High Threshold (%):" 
                                               VerticalAlignment="Center"
                                               Margin="0,5"/>
                                    <TextBox Grid.Row="2" Grid.Column="1"
                                             Text="{Binding CatCpuHighThreshold, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="5"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Goblin Jar Tab -->
            <TabItem Header="Goblin Jar Widget">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="Visibility" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <CheckBox Content="Enable Goblin Jar Widget"
                                          IsChecked="{Binding EnableGoblinJar}"
                                          Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Appearance" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="Size Scale:" Margin="0,5"/>
                                <Slider Minimum="0.5" Maximum="2.0" 
                                        Value="{Binding JarSizeScale}" 
                                        TickFrequency="0.1"
                                        IsSnapToTickEnabled="True"
                                        Margin="0,5"/>
                                <TextBlock Text="{Binding JarSizeScale, StringFormat='{}{0:F1}x'}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Battery Thresholds" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                               Text="Low Battery Threshold (%):" 
                                               VerticalAlignment="Center"
                                               Margin="0,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="1"
                                             Text="{Binding JarLowBatteryThreshold, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                               Text="Critical Battery Threshold (%):" 
                                               VerticalAlignment="Center"
                                               Margin="0,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1"
                                             Text="{Binding JarCriticalBatteryThreshold, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="5"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" 
                    Width="80" 
                    Height="30" 
                    Margin="5,0"
                    Click="SaveButton_Click"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Height="30" 
                    Margin="5,0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
